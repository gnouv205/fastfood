<!-- Featured Section Begin -->
<section class="featured spad">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="section-title">
					<h2>Featured Product</h2>
				</div>
				<div class="featured__controls">
					<ul>
						<li class="active" data-filter="*">All</li>
						<li data-filter=".oranges">Oranges</li>
						<li data-filter=".fresh-meat">Fresh Meat</li>
						<li data-filter=".vegetables">Vegetables</li>
						<li data-filter=".fastfood">Fastfood</li>
					</ul>
				</div>
			</div>
		</div>

		<div class="row featured__filter">
			@foreach (var product in Model)
			{
				<div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat">

					<div class="featured__item">
						<div class="featured__item__pic set-bg"
							 data-setbg="@product.HinhSanPham">

							<ul class="featured__item__pic__hover">
								<li>
									<a href="#"><i class="fa fa-heart"></i></a>
								</li>
								<li>
									<a asp-controller="Home" asp-action="Details" asp-route-maSP="@product.MaSanPham"><i class="fa-solid fa-circle-info"></i></a>
								</li>
								<li>
									
									<form asp-controller="Cart" asp-action="AddToCart" asp-route-proId="@product.MaSanPham" method="post">
										<button type="submit" class="add-to-cart-btn btn btn-outline-success" name="maSanPham"
										   value="@product.MaSanPham" style="border-radius: 50%; outline:none;">
											<i class="fa fa-shopping-cart"></i>
										</button>
									</form>
								</li>
							</ul>
						</div>
						<div class="featured__item__text">
							<h6><a href="#">@product.TenSanPham</a></h6>
							<h5>$@product.GiaSanPham</h5>
						</div>
					</div>

				</div>
			}
		</div>
	</div>
	<div class="pagination-container">
		@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
	</div>
</section>
<!-- Featured Section End -->
