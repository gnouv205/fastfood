@model ASM_CS4.ViewModels.ForgotPasswordViewModel

<style>
    form {
        max-width: 350px;
        margin: 40px auto;
        padding: 20px;
        background: #f9f9f9;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    h2 {
        text-align: center;
        color: #333;
        margin-bottom: 20px;
    }

    .alert {
        text-align: center;
        font-size: 14px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    label {
        font-weight: 600;
        margin-bottom: 5px;
        display: block;
        color: #555;
    }

    input {
        width: 100%;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 6px;
        transition: 0.3s;
    }

        input:focus {
            border-color: #007bff;
            outline: none;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.3);
        }

    .text-danger {
        font-size: 14px;
        margin-top: 5px;
        display: block;
    }

    button {
        width: 100%;
        padding: 10px;
        border: none;
        border-radius: 6px;
        background: #007bff;
        color: white;
        font-weight: bold;
        cursor: pointer;
        transition: 0.3s;
    }

        button:hover {
            background: #0056b3;
        }

</style>

<h2>Quên mật khẩu</h2>

@if (ViewBag.Message != null)
{
    <div class="alert alert-success">@ViewBag.Message</div>
}

<form asp-action="ForgotPassword" method="post">
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Gửi email</button>
</form>
