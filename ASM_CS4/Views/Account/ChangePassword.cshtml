@model ASM_CS4.ViewModels.ChangePasswordViewModel
@{
    ViewData["Title"] = "Đổi mật khẩu";
}

<style>
    /* Tạo layout đẹp cho form */
    .change-password-container {
        max-width: 400px;
        margin: 50px auto;
        padding: 20px;
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

        /* Tiêu đề form */
        .change-password-container h2 {
            text-align: center;
            color: #ff5722;
            font-weight: bold;
            margin-bottom: 20px;
        }

    /* Form inputs */
    .change-password-form .form-group {
        margin-bottom: 15px;
    }

    .change-password-form input {
        border-radius: 5px;
        padding: 10px;
        border: 1px solid #ddd;
        transition: 0.3s;
    }

        .change-password-form input:focus {
            border-color: #ff5722;
            box-shadow: 0 0 5px rgba(255, 87, 34, 0.5);
        }

    /* Nút submit */
    .btn-custom {
        width: 100%;
        padding: 10px;
        border: none;
        border-radius: 5px;
        background: #ff5722;
        color: white;
        font-size: 16px;
        font-weight: bold;
        cursor: pointer;
        transition: 0.3s;
    }

        .btn-custom:hover {
            background: #e64a19;
            box-shadow: 0 3px 6px rgba(255, 87, 34, 0.3);
        }

</style>

<div class="change-password-container">
    <h2 class="text-center">@ViewData["Title"]</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    <form asp-action="ChangePassword" method="post" class="change-password-form">
        <div class="form-group">
            <label asp-for="CurrentPassword"></label>
            <input asp-for="CurrentPassword" class="form-control" />
            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="NewPassword"></label>
            <input asp-for="NewPassword" class="form-control" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ConfirmNewPassword"></label>
            <input asp-for="ConfirmNewPassword" class="form-control" />
            <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-custom">Đổi mật khẩu</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
