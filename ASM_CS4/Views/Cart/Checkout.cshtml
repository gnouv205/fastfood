@model List<ASM_CS4.Models.Cart>
@{
    ViewData["Title"] = "Thanh toán";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    body {
        background-color: #f5f5f5;
    }

    .container {
        max-width: 800px;
        margin: 40px auto;
        background: white;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    h2 {
        text-align: center;
        color: #333;
        margin-bottom: 20px;
    }

    .alert {
        text-align: center;
        font-size: 14px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    label {
        font-weight: 600;
        color: #555;
    }

    input {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 6px;
        transition: 0.3s;
    }

        input:focus {
            border-color: #007bff;
            outline: none;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.3);
        }

    .table {
        width: 100%;
        background: white;
        border-radius: 8px;
        overflow: hidden;
    }

        .table thead {
            background: #007bff;
            color: white;
            text-align: center;
        }

        .table th, .table td {
            padding: 10px;
            text-align: center;
            border-bottom: 1px solid #ddd;
        }

        .table tbody tr:hover {
            background: #f8f9fa;
        }

    .table-bordered {
        border: 1px solid #ddd;
    }

    .total-amount {
        font-size: 18px;
        font-weight: bold;
        color: #d9534f;
        text-align: right;
        margin-top: 10px;
    }

    button {
        width: 100%;
        padding: 12px;
        border: none;
        border-radius: 6px;
        background: #28a745;
        color: white;
        font-weight: bold;
        cursor: pointer;
        font-size: 16px;
        transition: 0.3s;
    }

        button:hover {
            background: #218838;
        }

</style>

<h2>@ViewData["Title"]</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}


@if (!Model.Any())
{
    <p>Giỏ hàng của bạn hiện tại đang trống.</p>
}
else
{
    <form asp-action="PlaceOrder" method="post">
        <div class="form-group">
            <label for="address">Địa chỉ giao hàng:</label>
            <input type="text" class="form-control" id="address" name="address" required />
        </div>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Sản phẩm</th>
                    <th>Số lượng</th>
                    <th>Đơn giá</th>
                    <th>Tổng tiền</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Product.TenSanPham</td>
                        <td>@item.SoLuong</td>
                        <td>@item.Product.GiaSanPham.ToString("C")</td>
                        <td>@((item.SoLuong * item.Product.GiaSanPham).ToString("C"))</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="form-group">
            <label>Tổng tiền: @ViewBag.TotalAmount.ToString("C")</label>
        </div>

        <button type="submit" class="btn btn-success">Đặt hàng</button>
    </form>
}
