@model List<ASM_CS4.Models.ChiTietDonDatHang>

@{
    ViewData["Title"] = "Danh sách đơn hàng chờ xác nhận";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    /* General styles */
body {
    font-family: Arial, sans-serif;
    background-color: #f4f4f4;
    margin: 0;
    padding: 20px;
}

/* Table styles */
.table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 20px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    background-color: #fff;
    border-radius: 8px;
}

.table th, .table td {
    padding: 12px;
    text-align: center;
    border: 1px solid #ddd;
}

.table th {
    background-color: #f8f8f8;
    color: #333;
    font-weight: bold;
    text-transform: uppercase;
}

.table td {
    color: #555;
    vertical-align: middle;
}

.table tbody tr:nth-child(even) {
    background-color: #f9f9f9;
}

.table tbody tr:hover {
    background-color: #f1f1f1;
    cursor: pointer;
}

.table td button {
    padding: 6px 12px;
    font-size: 14px;
    border-radius: 4px;
    border: none;
    cursor: pointer;
    transition: background-color 0.3s;
}

/* Button styles */
.btn-success {
    background-color: #28a745;
    color: white;
}

.btn-success:hover {
    background-color: #218838;
}

.btn-danger {
    background-color: #dc3545;
    color: white;
}

.btn-danger:hover {
    background-color: #c82333;
}


</style>

<h2>@ViewData["Title"]</h2>

@if (!Model.Any())
{
    <p>Hiện tại không có đơn hàng chờ xác nhận.</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Tên khách hàng</th>
                <th>Sản phẩm</th>
                <th>Số lượng</th>
                <th>Đơn giá</th>
                <th>Tổng tiền</th>
                <th>Trạng thái</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                
                    <td>@item.Customer.TenKhachHang</td>
                    <td>@item.Product.TenSanPham</td>
                    <td>@item.SoLuong</td>
                    <td>@item.Gia.ToString("C")</td>
                    <td>@((item.SoLuong * item.Gia).ToString("C"))</td>
                    <td>@item.TrangThai</td>
                    <td>
                        <form asp-action="ApproveOrder" method="post">
                            <input type="hidden" name="maChiTiet" value="@item.MaChiTiet" />
                            <button type="submit" class="btn btn-success">Xác nhận</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
