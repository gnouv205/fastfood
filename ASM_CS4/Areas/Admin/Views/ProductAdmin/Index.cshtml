@model IEnumerable<ASM_CS4.Models.Product>

@{
	ViewData["Title"] = "Product";
	Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    /* General Card Styles */
    .card {
        border: none;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
        transition: transform 0.2s ease-in-out;
    }

        .card:hover {
            transform: translateY(-5px);
        }

    /* Card Header Styles */
    .card-header {
        background: linear-gradient(135deg, #17a2b8, #138496);
        color: white;
        font-size: 1.2rem;
        padding: 15px 20px;
        font-weight: bold;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    /* Search Input */
    form {
        margin-bottom: 15px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

        form input {
            flex-grow: 1;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 6px;
            outline: none;
            font-size: 1rem;
        }

        form button {
            padding: 10px 15px;
            border: none;
            background-color: #17a2b8;
            color: white;
            border-radius: 6px;
            font-weight: bold;
            cursor: pointer;
            transition: background 0.3s;
        }

            form button:hover {
                background-color: #117a8b;
            }

    /* Button Styles */
    .btn-info {
        background: linear-gradient(135deg, #17a2b8, #138496);
        border: none;
        border-radius: 6px;
        padding: 10px 15px;
        font-weight: bold;
        transition: 0.3s;
    }

        .btn-info:hover {
            background: linear-gradient(135deg, #138496, #117a8b);
        }

    /* Table Styles */
    .table {
        width: 100%;
        border-collapse: collapse;
        border-radius: 12px;
        overflow: hidden;
        background: white;
    }

        .table th, .table td {
            padding: 12px 15px;
            text-align: left;
            border-bottom: 1px solid #e1e1e1;
        }

        .table th {
            background: #f8f9fa;
            font-weight: bold;
            color: #495057;
            text-transform: uppercase;
        }

        .table td {
            vertical-align: middle;
        }

        /* Image Styling */
        .table img {
            width: 80px;
            height: auto;
            border-radius: 8px;
            transition: transform 0.2s ease-in-out;
        }

            .table img:hover {
                transform: scale(1.1);
            }

        /* Hover Effects for Table Rows */
        .table tbody tr {
            transition: background 0.3s ease-in-out;
        }

            .table tbody tr:hover {
                background-color: #f1f1f1;
            }

        /* Action Column Styles */
        .table .link-success, .table .link-danger {
            font-size: 1.2rem;
            transition: 0.2s;
        }

        .table .link-success {
            color: #28a745;
        }

            .table .link-success:hover {
                color: #218838;
                transform: scale(1.1);
            }

        .table .link-danger {
            color: #dc3545;
        }

            .table .link-danger:hover {
                color: #c82333;
                transform: scale(1.1);
            }

    /* Responsive Table Styling */
    .table-responsive {
        overflow-x: auto;
        -webkit-overflow-scrolling: touch;
    }

    /* Admin Table Header Styling */
    .card-header .row {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .card-header .col-md-auto {
        text-align: right;
    }


</style>

<form method="get">
	<input type="text" name="searchProduct" placeholder="Tìm sản phẩm..." value="@ViewBag.SearchProduct" />
	<button type="submit">Tìm kiếm</button>
</form>
<div class="card card-info card-outline">
	<div class="card-header">
		<div class="row">
			<div class="col-md">
			</div>
			<div class="col-md-auto">
				<a asp-area="Admin" asp-controller="ProductAdmin" asp-action="Create" type="button" class="btn btn-info">
					<i class="fa-solid fa-plus me-1"></i> Thêm sản phẩm
				</a>
			</div>
		</div>
	</div>
	<div class="card-body">
		<div class="table-responsive">
			<table id="tbl" class="table">
				<thead>
					<tr>
						<th style="width: 30px"></th>
						<th>Mã Sản Phẩm</th>
						<th>Tên Sản Phẩm</th>
						<th>Ảnh Sản Phẩm</th>
						<th>Số Lượng</th>
						<th>Giá</th>
						<th>Tình trạng</th>
						<th>Mô tả</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var product in Model)
					{
						<tr id="@product.MaSanPham">
							<td class="text-nowrap bg-light">
                                <a asp-area="Admin" asp-controller="ProductAdmin" asp-action="Edit" asp-route-maSanPham="@product.MaSanPham"
                                   class="me-1 link-success"><i class="fa-solid fa-edit"></i></a>


                                <a asp-action="Delete" asp-route-maSanPham="@product.MaSanPham" class="btn btn-danger"><i class="fa-solid fa-trash"></i></a>

                                
							</td>

							<td>@product.MaSanPham</td>
							<td>@product.TenSanPham</td>
							<td>
								<img src="@product.HinhSanPham" alt="Product Image" style="width: 100px; height: auto;" />
							</td>
							<td>@product.SoLuongSanPham</td>
							<td>@product.GiaSanPham</td>
							<td>@product.TrangThai</td>
							<td>@product.MoTaSanPham</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div> 

