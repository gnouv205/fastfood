@model ASM_CS4.Models.UserAdmin

@{
    ViewData["Title"] = "Thêm Admin"; // Tiêu đề của trang
    Layout = "/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml"; // Chỉ định layout nếu cần
}

<style>
    /* Thiết lập chung cho các ô input */
    .form-control {
        width: 100%; /* Đặt chiều rộng cho các ô input */
        max-width: 600px; /* Giới hạn chiều rộng tối đa nếu cần */
        margin-bottom: 15px; /* Khoảng cách giữa các ô */
        padding: 10px; /* Khoảng cách trong các ô */
        border: 1px solid #ced4da; /* Viền cho các ô */
        border-radius: 4px; /* Bo góc cho các ô */
        transition: border-color 0.3s; /* Hiệu ứng chuyển đổi màu viền */
    }

        /* Thay đổi màu viền khi ô được focus */
        .form-control:focus {
            border-color: #80bdff; /* Màu viền khi ô được focus */
            outline: none; /* Ẩn viền mặc định */
            box-shadow: 0 0 0.2rem rgba(0,123,255,.25); /* Hiệu ứng bóng khi focus */
        }

    /* Thiết lập cho nút submit */
    .btn-primary {
        margin-top: 20px; /* Khoảng cách phía trên nút */
        background-color: #007bff; /* Màu nền cho nút */
        border: none; /* Ẩn viền nút */
        color: white; /* Màu chữ trên nút */
        padding: 10px 20px; /* Khoảng cách trong nút */
        border-radius: 4px; /* Bo góc cho nút */
        cursor: pointer; /* Hiển thị con trỏ khi hover */
        transition: background-color 0.3s; /* Hiệu ứng chuyển đổi màu nền */
        width: 100%; /* Chiều rộng nút */
    }

        /* Hiệu ứng hover cho nút */
        .btn-primary:hover {
            background-color: #0056b3; /* Màu nền khi hover */
        }

    /* Thiết lập tiêu đề */
    h1 {
        font-size: 2em; /* Kích thước chữ cho tiêu đề */
        color: #333; /* Màu chữ */
        margin-bottom: 20px; /* Khoảng cách dưới tiêu đề */
    }

    /* Thiết lập cho các thông báo lỗi */
    .text-danger {
        font-size: 0.875em; /* Kích thước chữ cho thông báo lỗi */
        margin-top: 5px; /* Khoảng cách trên thông báo lỗi */
    }
</style>
<div style="width:1200px" class="card card-info card-outline">
    <div class="card-header">
        <h1>Thêm Admin</h1>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="MatKhau" class="control-label"></label>
                        <input asp-for="MatKhau" type="password" class="form-control" />
                        <span asp-validation-for="MatKhau" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Thêm" class="btn btn-primary" /> <!-- Nút chiếm toàn bộ chiều rộng -->
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Trở lại danh sách</a>
        </div>

        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    </div>
</div>